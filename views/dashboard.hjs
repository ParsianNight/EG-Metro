<!DOCTYPE html>
<html>
  <head>
    <title>Courses</title>
    <link rel='stylesheet' href='/styles/bootstrap.min.css' />
    <link rel='stylesheet' href='/styles/style.css' />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <style>
      /* Global styles */
      body {
        background-color: #f2f2f2;
        font-family: "San Francisco", "Helvetica Neue", Helvetica, Arial, sans-serif;
        color: #333;
      }

      /* Navbar styles */
      .navbar {
        background-color: rgba(185, 183, 183, 0.95);
        border-radius: 0;
        margin-bottom: 0;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      .navbar-brand {
        color: #000;
        font-weight: bold;
        font-size: 24px;
        text-transform: uppercase;
      }

      .navbar a {
        color: #444444;
        text-decoration: none;
        transition: color 0.3sease-in-out;
      }

      .navbar a:hover,
      .navbar .active {
        color: #000;
      }

      /* Active link styles */
      .navbar .active {
        border-bottom: 2px solid #000;
      }

      .navbar .active a {
        font-weight: bold;
      }

      button {
        display:block;
        margin: 50px auto;
        padding: 10px 20px;
        border:1px solid #000;
        border-radius: 5px;
        background-color: #000;
        color: #fff;
        font-size: 18px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #fff;
        color: #000;
      }

      @media only screen and (max-width: 768px) {
        /* Navbar styles */
        .navbar {
          background-color: rgba(255, 255, 255, 0.95);
          box-shadow: none;
        }

        .navbar-brand {
          font-size: 20px;
        }

        .navbar .active {
          border-bottom: none;
        }

        button {
          font-size: 16px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <nav class="navbar navbar-expand-md">
            <div class="navbar-header">
              <button
                type="button"
                class="navbar-toggle"
                data-toggle="collapse"
                data-target="#myNavbar"
              >
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Courses</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
              <ul class="nav navbar-nav">
                <li class="active"><a href="/dashboard">Home</a></li>
                <li><a href="/stations_example">Station</a></li>
                <li><a href="/users">Users</a></li>
                <li><a href="/users/add">Add Users</a></li>
                <li><a href="/">Logout</a></li>
              </ul>
            </div>
          </nav>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <p class="text-center">Welcome {{firstName}}, you are logged in!</p>
        </div>
      </div>
    </div>

    

    <script>
      const getZonesBtn = document.getElementById("getZonesBtn");

      getZonesBtn.addEventListener("click", async () => {
        const response = await fetch("/api/v1/zones");
        const data = await response.json();

        if (response.ok) {
          // Display zones data
          console.log(data);
        } else {
          // Display error message
          console.error(data.error);
        }
      });
    </script>
  </body>
</html>